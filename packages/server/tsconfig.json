{
  "extends": "@tsconfig/node20/tsconfig.json",

  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "..",

    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "Bundler",

    "experimentalDecorators": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,

    "paths": {
      "@server/*": ["./src/*"],
      "@tests/*": ["./tests/*"]
    }
  }

  // "exclude": ["node_modules", "./*.ts", "__test__"]
}
